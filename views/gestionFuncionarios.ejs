<%- include ('partials/_headerAdmin')  %>


    <%- include ('partials/_alertas')  %>


        <div class="container my-4 d-flex justify-content-center">
            <div class="container">


                <div class="row my-5">
                    <div class="col">


                        <a class="btn btn-success mx-auto" href="/admin/registroFuncionario" role="button">Registrar un nuevo funcionario</a>
                    </div>
                </div>

                <div class="row mt-5 mb-2">
                    <h2>Lista de funcionarios:</h2>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Identificaci√≥n</th>
                                    <th>Nombre completo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>

                                <%if(data){%>
                                    <%for(var i=0; i<data.length;i++){%>
                                        <tr>
                                            <td>
                                                <%=data[i].identificacion%>
                                            </td>
                                            <td>
                                                <%=data[i].nombre%>
                                                    <%=data[i].primerApellido%>
                                                        <%=data[i].segundoApellido%>
                                            </td>
                                            <td>
                                                <a href="edicionFuncionario/<%=data[i].identificacion%>" class="btn btn-primary " role="button">Editar</a>
                                                <a href="eliminarFuncionario/<%=data[i].identificacion%>" class="btn btn-danger " role="button">Eliminar</a>
                                            </td>
                                        </tr>
                                        <%}%>
                                            <%}%>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <%- include ('partials/_footerAdmin')  %>