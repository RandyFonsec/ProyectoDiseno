<%- include ('partials/_headerAdmin')%>

    <main div class="container my-4 d-flex justify-content-center">
        <form id="content" action="/admin/actualizarFuncionario/<%=funcionario.identificacion%>" method="post">
            <div class="mb-3">
                <label for="" class="fs-2 text">Modificación de funcionario:</label>
            </div>
            <div class="mb-3">
                <label for="identificacion" class="form-label">Identificación:</label>
                <input type="number" name="identificacion" class="form-control" id="identificacion" value="<%=funcionario.identificacion%>" readonly required>
            </div>


            <label for="nombreCompleto">Nombre completo:</label>
            <div id="nombreCompleto" class="mb-3 row">
                <div class="col">
                    <input type="text" name="nombre" class="form-control" value="<%=funcionario.nombre%>" placeholder="Nombre" required>
                </div>
                <div class="col">
                    <input type="text" name="apellido1" class="form-control" value="<%=funcionario.primerApellido%>" placeholder="Primer apellido" required>
                </div>
                <div class="col">
                    <input type="text" name="apellido2" class="form-control" value="<%=funcionario.segundoApellido%>" placeholder="Segundo apellido" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="tel" class="form-label">Número de teléfono:</label>
                <input type="number" name="telefono" value="<%=funcionario.numeroCelular%>" class="form-control" id="tel" required>
            </div>

            <div class="mb-3">
                <label for="correo" class="form-label">Correo institucional:</label>
                <input type="email" name="correo" value="<%=funcionario.correoInstitucional%>" class="form-control" id="correo" required>
            </div>

            <div class="mb-3">
                <label for="correo" class="form-label">Correo alterno:</label>
                <input type="email" name="correoAlterno" value="<%=funcionario.correoAlterno%>" class="form-control" id="correoAlterno" required>
            </div>

            <label class="mb-3" for="depar">Departamento al que pertenece:</label>
            <div id="depar" class="row mb-3">
                <div class="col-6"><select name="departamento" class="form-select" aria-label="Default select example">
                    <% departments_list.forEach (function (department) { %>
                        <%if(department.idDepartamento == funcionario.idDepartamento){%>
                            <option selected value="<%=department.idDepartamento%>"><%= department.descripcion %></option>
                        <%}else{%>
                            <option value="<%=department.idDepartamento%>"><%= department.descripcion %></option>
                        <%}%>
                        
                    <% }) %>
                  </select>
                </div>

                <div class="col-2">
                    <div class="form-check align-text-bottom">

                        <%if (funcionario.jefe == 1) { %>
                            <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="esJefe" checked>
                            <label class="form-check-label" for="flexCheckDefault">
                              Es jefe
                            </label>
                            <label class="form-check-label" for="flexCheckDefault">
                                <% } else { %>
                                    <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="esJefe">
                                <label class="form-check-label" for="flexCheckDefault">
                              Es jefe
                            </label>
                            <% } %>

                    </div>
                </div>

                <div class="col-2">
                    <div class="form-check align-text-bottom">
                        <%if (funcionario.discapacidad == 1) { %>
                            <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="esDiscapacitado" checked>
                            <label class="form-check-label" for="flexCheckDefault">
                          Tiene alguna discapacidad
                        </label>
                            <label class="form-check-label" for="flexCheckDefault">
                        <% } else { %>
                                    <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="esDiscapacitado">
                        <label class="form-check-label" for="flexCheckDefault">
                          Tiene alguna discapacidad
                        </label>
                            <% } %>


                    </div>
                </div>
                <div class="col-2">
                    <div class="form-check align-text-bottom">
                        <%if (funcionario.notificacionesAlternas == 1) { %>
                            <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="alternas" checked>
                            <label class="form-check-label" for="flexCheckDefault">
                          Notificaciones alternas
                        </label>
                            <label class="form-check-label" for="flexCheckDefault">
                        <% } else { %>
                            <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="alternas" >
                            <label class="form-check-label" for="flexCheckDefault">
                          Notificaciones alternas
                        </label>
                            <% } %>


                    </div>
                </div>
            </div>

            <label class="mb-3">Seleccione su rol:</label>
            <div class="mb-3">

                <%if (funcionario.rol == 1) { %>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="rol" type="radio" id="inlineCheckbox1" value="1" checked>
                        <label class="form-check-label" for="inlineCheckbox1">Administrativo</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="rol" type="radio" id="inlineCheckbox2" value="2">
                        <label class="form-check-label" for="inlineCheckbox2">Docente</label>
                    </div>

                    <% } else { %>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="rol" type="radio" id="inlineCheckbox1" value="1">
                            <label class="form-check-label" for="inlineCheckbox1">Administrativo</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="rol" type="radio" id="inlineCheckbox2" value="2" checked>
                            <label class="form-check-label" for="inlineCheckbox2">Docente</label>
                        </div>


                        <% } %>

            </div>
            <button type="submit" class="btn btn-primary">Actualizar funcionario</button>
        </form>
        </div>

        <%- include ('partials/_footerAdmin')  %>