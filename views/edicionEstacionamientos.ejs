<%- include ('partials/_headerAdmin')  %>
    <div class="container my-4 d-flex justify-content-center">

        <div class="row">
            <div class="row">
                <label for="" class="fs-2 text mb-4">Consulta estacionamientos:</label>
            </div>


            <form action="edicionFuncionarios" method="get">
                <div class="mb-3">
                    <div class="row">
                        <label for="id" class="form-label">Id estacionamiento:</label>
                        <div class="col">
                            <input type="number" name="id" class="form-control" id="id" required>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-primary">
                        </div>
                    </div>
                </div>
            </form>


            <div class="row my-5">
                <label for="lista" class="my-3 fs-3 text">Lista de estacionamientos:</label>
                <div id="lista" class="container">

                    <%if (estacionamientos){%>
                        <%for (var estacionamiento = 0; estacionamiento < estacionamientos.length; estacionamiento++) {%>
                            <div class="row my-3">
                                <div class="col-3">
                                    <label for="">Identificador: <%=estacionamientos[estacionamiento].identificador%></label>
                                </div>
                                <div class="col-3">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-4">
                                                <a href="edicionEstacionamiento/<%=estacionamientos[estacionamiento].identificador%>" class="btn btn-primary " role="button">Editar</a>
                                            </div>
                                            <div class="col-4">
                                                <a href="eliminarEstacionamiento/<%=estacionamientos[estacionamiento].identificador%>" class="btn btn-danger " role="button">Eliminar</a>
                                            </div>
                                            <div class="col-4">
                                                <a href="edicionEspacios/<%=estacionamientos[estacionamiento].identificador%>" class="btn btn-info " role="button">Espacios</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                                <%}%>

                </div>
            </div>



        </div>




    </div>



    <%- include ('partials/_footerAdmin')  %>